{
    "name": "viettuans/quick-component",
    "description": "A Laravel package to create a quick component",
    "require": {
        "php": "^7.4"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Viettuans\\QuickComponent\\": "src"
        }
    },
    "autoload-dev": {
    },
    "extra": {
        "laravel": {
            "providers": [
                "Viettuans\\QuickComponent\\QuickComponentServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "phpunit",
        "format": "php-cs-fixer fix --allow-risky=yes",
        "analyse": "phpstan analyse"
    }
}
